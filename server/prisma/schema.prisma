generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  CREATOR
}

model User {
  id       String    @id
  name     String
  email    String    @unique
  role     Role      @default(USER)
  password String
  Session  Session[]
  Videos   Videos[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Videos {
  videoId          String   @id
  title            String
  dateOfPublishing DateTime
  publisher        User     @relation(references: [id], fields: [publisherId], onDelete: Cascade)
  publisherId      String   @unique
  link             String   @unique
}
